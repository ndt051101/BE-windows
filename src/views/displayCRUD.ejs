<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }

    .btn-edit {
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: orange;
      color: #fff;
      height: 25px;
      width: 60px;
      border-radius: 10px;
      cursor: pointer;
      text-decoration: none;
    }
    .btn-delete {
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: red;
      color: #fff;
      height: 25px;
      width: 60px;
      border-radius: 10px;
      cursor: pointer;
      text-decoration: none;
    }
  </style>
  <body>
    <table style="width: 100%">
      <tr>
        <td>Email</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Address</td>
        <td>Actions</td>
      </tr>
      <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td><%= data[i].email %></td>
        <td><%= data[i].firstName %></td>
        <td><%= data[i].lastName %></td>
        <td><%= data[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%= data[i].id %>"
            class="btn-edit"
            type="button"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%= data[i].id %>"
            class="btn-delete"
            type="button"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
